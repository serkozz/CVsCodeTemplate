{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "process",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "none",
            "problemMatcher": "$gcc"
        },
        {
            "label": "CMake: Build",
            "type": "process",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "CMake: Configure"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run App",
            "type": "process",
            "command": "${workspaceFolder}/build/bin/App.exe",
            "dependsOn": [
                "CMake: Build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": "none",
            "problemMatcher": "$gcc"
        }
    ]
}